{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Usage vs Remaining (Per Pool)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "ratelord_usage",
          "legendFormat": "{{pool_id}} (Used)",
          "refId": "A"
        },
        {
          "expr": "ratelord_limit",
          "legendFormat": "{{pool_id}} (Remaining)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "showPoints": "auto",
            "stacking": { "mode": "normal", "group": "A" }
          },
          "unit": "short"
        },
        "overrides": []
      }
    },
    {
      "title": "Forecast Time To Exhaustion (Seconds)",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "ratelord_forecast_seconds",
          "legendFormat": "{{pool_id}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 60 },
              { "color": "green", "value": 300 }
            ]
          },
          "unit": "s"
        },
        "overrides": []
      }
    },
    {
      "title": "Intent Decision Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "rate(ratelord_intent_total[1m])",
          "legendFormat": "{{decision}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "showPoints": "auto"
          },
          "unit": "ops"
        },
        "overrides": []
      }
    }
  ],
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["ratelord"],
